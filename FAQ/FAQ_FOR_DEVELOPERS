################################################################################
[KF, 2016-06-14]
scafes/trunk

Problem:
========
How to record traces of the example application "HeatEqnFDM"?

Solution:
=========
#Install MPI: mpich
sudo apt-get install mpich

#Install Score-P 2.0.2 with MPI support
mkdir -p BUILD
../configure  --prefix=/opt/scorep/2.0.2  --with-nocross-compiler-suite=gcc       --without-shmem --with-libbfd=no   --with-papi-header=/usr/include    --with-papi-lib=/usr/lib      --without-gui      --enable-static --enable-shared
make -j2
make install
export LD_LIBRARY_PATH=/opt/scorep/2.0.2/lib:$LD_LIBRARY_PATH
export PATH=/opt/scorep/2.0.2/bin:$PATH

#Instrument application.
scorep mpic++ --std=c++11 -I $HOME/scafes-work/trunk/software/include -I . -c main.cpp
scorep mpic++ -L $HOME/scafes-work/trunk/software/lib -o HeatEqnFDM main.o -lscafes -lboost_serialization -lboost_program_options -lboost_mpi -lboost_regex

#Instrument application using MPICH.
scorep mpic++.mpich --std=c++11 -I $HOME/scafes-work/trunk/software/include -I . -c main.cpp
scorep mpic++.mpich -L $HOME/scafes-work/trunk/software/lib -o HeatEqnFDM main.o -lscafes -lboost_serialization -lboost_program_options -lboost_mpi -lboost_regex

#Record information.
export SCOREP_ENABLE_TRACING=1
export SCOREP_TOTAL_MEMORY=512M
mpirun -np 4 ./HeatEqnFDM --dim=3 --typeDomainDecomposition=UNI --divideGrid=1x1x1 \
--nPartitions=4x1x1   --nNodes=32x8x8  --coordNodeFirst=0x0x0 --coordNodeLast=1x1x1 \
--starttime=0 --endtime=1 --nTimesteps=20 --nSnapshots=1 --writeKindFile=0 \
--enabledAdolc=0 --asynchronMode=1 --useBoostMpiSkeletonConcept=1 --computeGradients=0 \
--outputfile=HeatEqnFDM_4_1_32x8x8 --outputlevel=5 --nLayersAtBorder=1 \
